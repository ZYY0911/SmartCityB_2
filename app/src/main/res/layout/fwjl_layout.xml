<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/head" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rl_1"
            android:gravity="center"
            android:padding="4dp"
            android:text="周日"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rl_1"
            android:gravity="center"
            android:padding="4dp"
            android:text="周一"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rl_1"
            android:gravity="center"
            android:padding="4dp"
            android:text="周二"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rl_1"
            android:gravity="center"
            android:padding="4dp"
            android:text="周三"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rl_1"
            android:gravity="center"
            android:padding="4dp"
            android:text="周四"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rl_1"
            android:gravity="center"
            android:padding="4dp"
            android:text="周五"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rl_1"
            android:gravity="center"
            android:padding="4dp"
            android:text="周六"
            android:textColor="#333"
            android:textSize="20sp" />
    </LinearLayout>

    <com.example.smartcityb_2.util.MyGirdView
        android:id="@+id/rl_gidr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_xjll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_line"
            android:gravity="center"
            android:padding="10dp"
            android:text="巡检记录"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_cyjl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/text_no_line"
            android:gravity="center"
            android:padding="10dp"
            android:text="餐饮记录"
            android:textColor="#333"
            android:textSize="20sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>